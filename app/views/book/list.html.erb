<ul id = "subjects">
   <% Subject.all.each do |c| %>
   <li><%= link_to c.title, :action => "show_subjects", :id => c.id %></li>
   <% end %>
</ul>
<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
    <p>These are the current books in our system</p>

    <ul id = "books">
        <% @books.each do |c| %>
            <li>
            <%= link_to c.title, {:action => 'show', :id => c.id} -%>
        <div class= 'buttons'>
                <b> <%= link_to 'Edit',  {:action => 'edit', :id => c.id} %></b>
                <b> <%= link_to "Delete",{:action => 'delete', :id => c.id},   :confirm => "Are you sure you want to delete this item?" %></b>
            </div>
            </li>
        <% end %>
    </ul>
<% end %>
<p class ='addNew'><%= link_to "Add new Book", {:action => 'new' }%></p>