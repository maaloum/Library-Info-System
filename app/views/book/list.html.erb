<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
    <p class= "mb-4 mx-3 text-dark">These are the current books in our system</p>
<div class= "d-flex">
     <% @books.each do |c| %>
    <div class="card mb-2 mx-3" style="width: 30rem;">
        <div class="card-body mb-2 mx-4">
            <h5 class="card-title mb-2 text-decoration-none text-dark"><%=link_to c.title, c, class: "text-decoration-none text-success" %></h5>
            <p class="card-text mb-2"><%=  c.body %></p>
            <div class= "buttons d-flex justify-content-center align-items-center">
                <%= link_to 'Edit',  edit_book_url(c), class: "btn btn-primary m-2" %></b>
                <%= button_to "Delete",  book_path(c), method: :delete, class: "btn btn-danger m-2",   data: {:confirm => "Are you sure you want to delete this book?"} %>
                <%= button_to "Download", new_book_path, class: "btn btn-outline-success m-2" %>
                <%= button_to "Preview", new_book_path, class: "btn btn-secondary m-2" %>
                 <%= button_to "Upload", new_book_path, class: "btn btn-info m-2" %>
            </div>
        </div>
    </div>
   <% end %>
</div>
<% end %>

<%= link_to "Add new Book", new_book_path, class: "btn btn-success mx-3 mb-4" %>



