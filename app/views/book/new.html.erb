<h1>Add new book</h1>

<%= form_tag :action => 'create' do %>
<p>
    <label for = "book_title">Title</label>:
    <%= text_field 'book', 'title' %>
</p>

<p>
    <label for = "book_price">Price</label>:
    <%= text_field 'book', 'price' %>
</p>
<p  class= 'collection'>
    <label for = "book_subject_id">Subject</label>:
    <%= collection_select(:book, :subject_id, @subjects, :id, :title, prompt: true) %>
</p>
<p>
    <label for = "book_body">Description</label><br/>
    <%= text_area 'book', 'body' %>
</p>
<p class ='submit'><%= submit_tag "Create" %></p>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
