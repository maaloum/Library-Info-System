<section> 
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-2 me-3">Sign in </p>
          </div>
          <div class="form-outline mb-4">
            <div class="field">
              <%= f.label :email, class:"form-label", for: "form3Example3" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %> 
            </div>
          </div>
          <div class="form-outline mb-3">
              <div class="field">
             <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                      </div>
                    <% end %>
            </div>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:"text-body" %>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
                  <div class="actions">
                    <%= f.submit "Log in", class:"btn btn-primary btn-lg",
              style: "padding-left: 2.5rem; padding-right: 2.5rem;" %>
                  </div>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="#!"
                class="link-danger"> <%= link_to "Register" , new_registration_path(resource_name)%></a></p>
          </div>

        <%end%>
      </div>
    </div>
  </div>
  <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between mt-5 py-4 px-4 px-xl-5 bg-dark">
    <div class="text-white mb-3 mb-md-0">
      Copyright Â© 2023. All rights reserved.
    </div>

    <div>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-facebook-f"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-google"></i>
      </a>
      <a href="#!" class="text-white">
        <i class="fab fa-linkedin-in"></i>
      </a>
    </div>
  </div>
</section>